@import "./styles/iconfont.wxss";
/* 在微信小程序中不支持通配符 */
page,view,text,swiper,swiper-item,image,navigator{
  padding: 0;
  margin: 0;
  box-sizing: border-box;
}
/* 主题颜色通过变量来实现
1.less中存在变量这个知识
2.原生的css和wxss也是支持变量
*/
page{
  /* 定义主体颜色 */
  --themColor:#eb4450;
  /* 定义同意的字体大小 */
  font-size: 28rpx;
}
image{
  width: 100%;
}